@model IEnumerable<GeekTest.Models.webpages_Roles>

@{
    ViewBag.Title = "Роли пользователей";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table>
    <tr>
        <th>
           Роль
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.RoleId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.RoleId })
