@model IEnumerable<GeekTest.Models.tests>

@{
    ViewBag.Title = "Тесты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Тесты</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table style="border-collapse: separate; border-spacing: 20px 10px; text-align:justify">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.test_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.test_info)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.test_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.test_info)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) 
            @Html.ActionLink("Детали", "Details", new { id=item.id })
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Назад", "../Admin/Index")
</p>