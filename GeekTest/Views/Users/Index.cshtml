@model IEnumerable<GeekTest.Models.UserProfile>
@using GeekTest.Models
@{
    ViewBag.Title = "Пользователи";
    TestContext db = new TestContext();
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать нового", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            Роль
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @ViewBag.rolesDic[item.UserId]
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Назад", "Index", "Admin")</p>
