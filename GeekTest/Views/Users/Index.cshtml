@model IEnumerable<GeekTest.Models.UserProfile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Создать нового", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Детали", "Details", new { id=item.UserId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Назад", "Index", "Admin")</p>
